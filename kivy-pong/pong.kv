#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball

    canvas:
        Rectangle:
            pos: 0, self.center_y - 5
            size: self.width, 10
    
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
    
    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - root.height + 150
        text: "0"

    PongBall:
        id: pong_ball
        center: self.parent.center
