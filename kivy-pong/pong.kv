#:kivy 1.0.9

<PongGame>:
    canvas:
        Rectangle:
            pos: 0, self.center_y - 5
            size: self.width, 10
    
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
    
    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - root.height + 150
        text: "0"
